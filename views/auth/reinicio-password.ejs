<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/auth/auth.css">
</head>
<body class="joinnus-body">
    <main>
        <div class="row justify-content-center" style="min-height: calc(100vh);">
            <div class="col-lg-6">                
                <div class="w-100 p-4">
                    <a href="/tienda">
                        <img src="https://cdn.joinnus.com/files/joinnus-com-logo.svg" alt="" srcset="" width="200">
                    </a>

                    <div class="h2 my-3"><b><%= nombreUsuario %></b></div>

                    <% if (mensajeError) { %>
                        <div class="user-message user-message-error w-100 my-3"><%= mensajeError %></div>
                    <% } %>

                    <form class="auth-form" action="/nuevo-password"  method="POST">
                        <div class="form-row">
                            <div class="col-12">
                                <div>Ingresa tu nueva contraseña</div>
                                <input type="password" name="password" id="password" placeholder="Nueva contraseña">
                            </div>
                        </div>
                        <input type="hidden" name="idUsuario" value="<%= idUsuario %>">
                        <input type="hidden" name="tokenPassword" value="<%= tokenPassword %>">
                        <button class="btn btn-auth" type="submit">Guardar nueva contraseña</button>
                    </form>
                </div>                
            </div>
            <div class="col-lg-6 auth-image"></div>
        </div>
    </main>
</body>
</html>
