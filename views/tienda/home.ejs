<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/store/general.css">
    <link rel="stylesheet" href="/css/store/home.css">
</head>
<body class="joinnus-body">
    <%- include('../includes/headerStore.ejs') %>

    <main>
        <div class="principal-banner">
            <img src="https://cdn.joinnus.com/files/2024/10/efJpbNCqNjUiWoo.png" alt="banner-img">
        </div>


        <div class="container-section">
            <div class="search-section w-100 mt-4">
                <div>
                    <form action="/buscar-eventos" class="search-form" method="POST">
                        <div class="col-9 p-0">
                            <input type="text" class="w-100 h-100" name="searchTerm" placeholder="Encuentra los mejores eventos">
                        </div>
                        <div class="col-1 p-0">
                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                            <button class="btn btn-search">
                                <%- include('../svgs/btnBuscar.ejs') %>
                            </button>
                        </div>                                                                
                    </form>
                </div>
            </div>
            
            <div class="principal-events mt-4">
                <h1 class="subtitle-home"> Eventos destacados </h1>
                    <% if (ev.length > 0) { %>
                        <div class="eventos-destacados">
                            <% for (let evento of ev.slice(0, 8)) { %>
                                <div class="evento">
                                    <img src="<%=evento.urlImagen %>" alt="Evento">
                                    <div class="info-evento">
                                        <h3 class="title-event"><%= evento.nombre %></h3>
    
                                        <div class="time-info">
                                            <div class="icon-calendar">
                                                <%- include('../svgs/calendar.ejs') %>
                                            </div>
                                            
                                            <p class="m-0"> <%= evento.fecha %> - <%= evento.hora %> </p>
                                        </div>
                                        
                                        <div class="price-info d-flex">                                    
                                            <a href="/tienda/detalle-evento/<%= evento._id %>" class="btn-comprar"> Comprar </a>
                                        </div>
                                    </div>
                                </div>
                            <% } %>
                        </div>
                    <% } else { %>
                        <h1>No hay eventos para mostrar</h1>
                    <% } %>
                </div>
            </div>
        </div>
        
    </main>
</body>
</html>